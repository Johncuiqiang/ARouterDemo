<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到测试界面" />
    <Button
        android:id="@+id/btn_navigation_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带参数跳转到测试界面"
        android:layout_below="@+id/btn_navigation"
        />
    <Button
        android:id="@+id/btn_user_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带参数跳转到用户界面"
        android:layout_below="@+id/btn_navigation_params"
        />

</RelativeLayout>